<section class="grid container rsvp">
  <div class="unit whole section-header">
    <h3 class="title">RSVP Attendance</h3>
  </div>
  <div class="grid">
    <div class="unit half">
      <input class="attendButton" type="button" value="No, I Cannot Attend" {{ bind-attr class="isNotAttendingSelected:selected" }} {{ action "notAttending" }}></input>
    </div>
    <div class="unit half">
      <input class="attendButton" type="button" value="Yes, I Am Attending" {{ bind-attr class="isAttendingSelected:selected" }} {{ action "attending" }}></input>
    </div>
  </div>
  <div class="grid">
    <div class="unit whole">
      <input class="submit" type="button" value="Cancel" {{action "previous"}}></input>
    </div>
  </div>
  <div class="grid">
    <div class="unit whole">
      <input class="submit" type="button" {{ bind-attr value="nextButtonText" }} {{action "next"}}></input>
    </div>
  </div>
</section>
