{{#if userIsAttendingEvent}}
  <div class="grid">
    <div class="unit half">
      <p>Do you have any dietary restrictions?</p>
      {{textarea class="text" rows="3" value=dietaryRestrictions}}
    </div>
    <div class="unit half">
      <p>Anything else you would like to tell us?</p>
      {{textarea class="text" rows="3" value=notesForBrideGroom}}
    </div>
  </div>
{{else}}
  <div class="grid">
    <div class="unit whole">
      You are not selected to attend the event. Please go to the Attendance screen to change your reservation.
    </div>
  </div>
{{/if}}
<div class="grid">
  <div class="unit whole">
    <input class="submit" type="submit" value="Back" {{action "previous"}}></input>
  </div>
</div>
<div class="grid">
  <div class="unit whole">
    <input class="submit" type="submit" value="Next" {{action "next"}}></input>
  </div>
</div>