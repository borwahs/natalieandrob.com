{{#if userIsAttendingEvent}}
  {{#each contacts itemController="contact"}}
    <div class="grid">
      <div class="unit one-third"><input type="button" {{bind-attr value="isAttendingButtonText"}} {{action "setIsAttendingValue"}} /></div>
      <div class="unit one-third">{{input type="text" value=firstName size="25"}}</div>
      <div class="unit one-third">{{input type="text" value=lastName size="25"}}</div>
    </div>
  {{/each}}
{{else}}
  <div class="grid">
    <div class="unit whole">
      You are not selected to attend the event. Please go to the Attendance screen to change your reservation.
    </div>
  </div>
{{/if}}
<div class="grid">
  <div class="unit whole rsvp-navigate">
    <ul>
    <li><input class="submit previous" type="submit" value="< Back" {{action "previous"}}></input></li>
    <li><input class="submit next" type="submit" value="Next >" {{action "next"}}></input></li>
    </ul>
  </div>
</div>
